<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/content_details_basic">

    <androidx.cardview.widget.CardView
        android:id="@+id/root_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/wrapper_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/overview_TextView"
                visibleOrGone="@{movieDetails.tagline}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingStart="32dp"
                android:paddingTop="8dp"
                android:paddingEnd="32dp"
                android:paddingBottom="8dp"
                android:text="@{movieDetails.tagline}"
                android:textSize="18sp"
                tools:text="Lorem ipsum dolor sit amet. Consectetur adipiscing." />

            <TextView
                android:id="@+id/show_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/show_details" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/images_list"
                hasFixedSize="@{true}"
                nestedScrollingEnabled="@{false}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="com.insiderser.android.movies.widget.FixLinearLayoutManager"
                tools:listitem="@layout/list_item_images" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <data>

        <variable
            name="movieDetails"
            type="com.insiderser.android.movies.model.movie.MovieDetails" />
    </data>
</layout>